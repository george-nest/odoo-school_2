<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_hospital_patient_profile_view_form" model="ir.ui.view">
        <field name="name">hr_hospital.patient_profile.form</field>
        <field name="model">hr_hospital.patient_profile</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="patient_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="hr_hospital_patient_profile_view_tree" model="ir.ui.view">
        <field name="name">hr_hospital.patient_profile.tree</field>
        <field name="model">hr_hospital.patient_profile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="patient_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_patient_profile_action" model="ir.actions.act_window">
        <field name="name">Patient profile</field>
        <field name="res_model">hr_hospital.patient_profile</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>