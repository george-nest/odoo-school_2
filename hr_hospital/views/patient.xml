<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_hospital_patient_tree<" model="ir.ui.view">
            <field name="name">hr.hospital.patient.tree</field>
            <field name="model">hr.hospital.patient</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="isbn"/>
                </tree>
            </field>
        </record>

        <record id="hr_hospital_patient_form" model="ir.ui.view">
            <field name="name">r.hospital.patient.form</field>
            <field name="model">r.hospital.patient</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                            <field name="name"/>
                            <field name="isbn"/>
                   </sheet>
                </form>
            </field>
        </record>


        <record id="action_main_model_details_report" model="ir.actions.act_window">
            <field name="name">hr.hospital.patient</field>
            <field name="res_model">hr.hospital.patient</field>
            <field name="view_mode">tree,form</field>
            <field name="type" ref="ir.actions.act_window"/>
        </record>

        <menuitem id="hr_hospital_patient_menu"
            action="hr_hospital_patient_act_window"
            name="Patient"
            parent="hr_hospital_patients"
            sequence="200"/>
    </data>
</odoo>